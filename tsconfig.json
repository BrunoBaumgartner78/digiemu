{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "lib":  [
                                        "dom",
                                        "dom.iterable",
                                        "esnext"
                                    ],
                            "allowJs":  false,
                            "skipLibCheck":  true,
                            "strict":  true,
                            "noImplicitAny": false,
                            "noEmit":  true,
                            "esModuleInterop":  true,
                            "module":  "esnext",
                            "moduleResolution":  "bundler",
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "jsx":  "react-jsx",
                            "baseUrl":  ".",
                            "typeRoots": ["./src/types", "./node_modules/@types"],
                            "paths":  {
                                          "@/*":  [
                                                      "./src/*"
                                                  ]
                                      },
                            "incremental":  true,
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ]
                        },
    "include":  [
                    "next-env.d.ts",
                    "src/**/*.ts",
                    "src/**/*.d.ts",
                    "src/**/*.tsx",
                    ".next/types/**/*.ts",
                    ".next/dev/types/**/*.ts"
                ],
    "exclude":  [
                    "node_modules",
                    ".next",
                    "dist",
                    "build",
                    "coverage",
                    "src/_planned/**",
                    ".qa",
                    ".qa/**"
                ]
}
