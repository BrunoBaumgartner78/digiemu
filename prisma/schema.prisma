generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model StripeWebhookEvent {
  id        String   @id @default(cuid())
  eventId   String   @unique
  type      String
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String
  action     String
  targetType String
  targetId   String?
  meta       Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  actor      User     @relation("AuditActor", fields: [actorId], references: [id])

  @@index([actorId])
  @@index([action])
  @@index([targetType])
  @@index([targetId])
  @@index([createdAt])
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  name           String?
  password       String?
  role           Role            @default(BUYER)
  isBlocked      Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  adminProfile   AdminProfile?
  auditLogs      AuditLog[]      @relation("AuditActor")
  buyerProfile   BuyerProfile?
  comments       Comment[]
  likes          Like[]
  orders         Order[]
  passwordResets PasswordReset[]
  payouts        Payout[]
  products       Product[]       @relation("VendorProducts")
  views          ProductView[]
  reviews        Review[]
  vendorProfile  VendorProfile?
}

model VendorProfile {
  id             String       @id @default(cuid())
  userId         String       @unique
  displayName    String?      @db.VarChar(120)
  bio            String?
  avatarUrl      String?      @db.VarChar(500)
  bannerUrl      String?      @db.VarChar(500)
  websiteUrl     String?      @db.VarChar(500)
  twitterUrl     String?      @db.VarChar(500)
  instagramUrl   String?      @db.VarChar(500)
  tiktokUrl      String?      @db.VarChar(500)
  facebookUrl    String?      @db.VarChar(500)
  slug           String?      @unique
  isPublic       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  /// Vendor moderation status:
  /// - PENDING: wartet auf Admin-Freigabe (darf keine Produkte erstellen)
  /// - APPROVED: darf Produkte erstellen
  /// - BLOCKED: gesperrt
  status         VendorStatus @default(PENDING)
  /// optionaler Admin-Hinweis (z.B. Ablehnungsgrund)
  moderationNote String?
  products       Product[]    @relation("VendorProfileProducts")
  user           User         @relation(fields: [userId], references: [id])
}

model BuyerProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  displayName String   @default("")
  bio         String   @default("")
  avatarUrl   String   @default("")
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model AdminProfile {
  id                    String   @id @default(cuid())
  userId                String   @unique
  displayName           String   @default("")
  signature             String   @default("")
  notifyOnDownload      Boolean  @default(true)
  notifyOnPayoutRequest Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])
}

model Product {
  id              String         @id @default(cuid())
  title           String
  description     String
  priceCents      Int
  fileUrl         String
  thumbnail       String?
  category        String
  isActive        Boolean        @default(true)
  vendorId        String
  vendorProfileId String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  /// Interne Moderations-Notiz für Admins (z.B. Sperr-Grund).
  moderationNote  String?
  /// Produktstatus für Sichtbarkeit & Moderation.
  /// Mögliche Werte (Konvention, kein Enum):
  /// - "DRAFT"   : nur Vendor + Admin sehen das Produkt
  /// - "ACTIVE"  : Produkt ist im Marketplace sichtbar
  /// - "BLOCKED" : durch Admin gesperrt, nicht sichtbar für Käufer
  status          ProductStatus  @default(DRAFT)
  comments        Comment[]
  likes           Like[]
  orders          Order[]
  vendor          User           @relation("VendorProducts", fields: [vendorId], references: [id])
  vendorProfile   VendorProfile? @relation("VendorProfileProducts", fields: [vendorProfileId], references: [id])
  views           ProductView[]
  reviews         Review[]
}

model ProductView {
  id          String   @id @default(cuid())
  productId   String
  createdAt   DateTime @default(now())
  day         String
  fingerprint String?
  userId      String?
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id])

  @@unique([productId, userId, day], name: "productId_userId_day")
  @@unique([productId, fingerprint, day], name: "productId_fingerprint_day")
  @@index([productId])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  productId String
  content   String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  productId String
  rating    Int
  content   String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
}

model Order {
  id                    String        @id @default(cuid())
  buyerId               String
  productId             String
  stripeSessionId       String        @unique
  amountCents           Int
  status                String
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  platformEarningsCents Int           @default(0)
  vendorEarningsCents   Int           @default(0)
  downloadLink          DownloadLink?
  buyer                 User          @relation(fields: [buyerId], references: [id])
  product               Product       @relation(fields: [productId], references: [id])
}

model DownloadLink {
  id            String   @id @default(cuid())
  orderId       String   @unique
  fileUrl       String
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  downloadCount Int      @default(0)
  isActive      Boolean  @default(true)
  maxDownloads  Int      @default(3)
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([expiresAt])
}

model Payout {
  id          String       @id @default(cuid())
  vendorId    String
  amountCents Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  paidAt      DateTime?
  status      PayoutStatus @default(PENDING)
  vendor      User         @relation(fields: [vendorId], references: [id])
}

model PasswordReset {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum VendorStatus {
  PENDING
  APPROVED
  BLOCKED
}

enum ProductStatus {
  DRAFT
  ACTIVE
  BLOCKED
}

enum Role {
  BUYER
  VENDOR
  ADMIN
}

enum PayoutStatus {
  PENDING
  PAID
  CANCELLED
}
