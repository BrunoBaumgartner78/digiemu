generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Tenant {
  id        String         @id @default(cuid())
  key       String         @unique
  name      String
  status    TenantStatus   @default(ACTIVE)
  plan      TenantPlan     @default(FREE)
  logoUrl   String?
  themeJson Json?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  mode      TenantMode     @default(WHITE_LABEL)
  domains   TenantDomain[]

  @@index([status])
  @@index([plan])
}

model TenantDomain {
  id        String   @id @default(cuid())
  tenantId  String
  domain    String   @unique
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([isPrimary])
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String
  action     String
  targetType String
  targetId   String?
  meta       Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  actor      User     @relation("AuditActor", fields: [actorId], references: [id])

  @@index([actorId])
  @@index([action])
  @@index([targetType])
  @@index([targetId])
  @@index([createdAt])
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  name           String?
  password       String?
  role           Role            @default(BUYER)
  isBlocked      Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  adminProfile   AdminProfile?
  auditLogs      AuditLog[]      @relation("AuditActor")
  buyerProfile   BuyerProfile?
  comments       Comment[]
  likes          Like[]
  orders         Order[]
  passwordResets PasswordReset[]
  payouts        Payout[]
  products       Product[]       @relation("VendorProducts")
  views          ProductView[]
  reviews        Review[]
  vendorProfiles VendorProfile[]
}

model VendorProfile {
  id                  String       @id @default(cuid())
  userId              String
  displayName         String?      @db.VarChar(120)
  bio                 String?
  avatarUrl           String?      @db.VarChar(500)
  bannerUrl           String?      @db.VarChar(500)
  websiteUrl          String?      @db.VarChar(500)
  twitterUrl          String?      @db.VarChar(500)
  instagramUrl        String?      @db.VarChar(500)
  tiktokUrl           String?      @db.VarChar(500)
  facebookUrl         String?      @db.VarChar(500)
  slug                String?
  isPublic            Boolean      @default(true)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  activeProductsCount Int          @default(0)
  lastSaleAt          DateTime?
  ratingAvg           Float?
  ratingCount         Int          @default(0)
  refundsCount        Int          @default(0)
  totalRevenueCents   Int          @default(0)
  totalSales          Int          @default(0)
  status              VendorStatus @default(PENDING)
  /// ✅ Multi-tenant scope key
  tenantKey           String       @default("DEFAULT")
  products            Product[]    @relation("VendorProfileProducts")
  user                User         @relation(fields: [userId], references: [id])

  @@unique([tenantKey, userId])
  @@unique([tenantKey, slug])
  @@index([tenantKey])
  @@index([tenantKey, status])
}

model BuyerProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  displayName String   @default("")
  bio         String   @default("")
  avatarUrl   String   @default("")
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model AdminProfile {
  id                    String   @id @default(cuid())
  userId                String   @unique
  displayName           String   @default("")
  signature             String   @default("")
  notifyOnDownload      Boolean  @default(true)
  notifyOnPayoutRequest Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])
}

// Product status enum: replaces string-based `status` on Product
enum ProductStatus {
  DRAFT
  ACTIVE
  BLOCKED
  PUBLISHED
  ARCHIVED
}

model Product {
  id              String        @id @default(cuid())
  title           String
  description     String
  priceCents      Int
  fileUrl         String
  thumbnail       String?
  category        String
  isActive        Boolean       @default(true)
  vendorId        String
  vendorProfileId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  /// Produktstatus (Konvention):
  /// - DRAFT | ACTIVE | BLOCKED | PUBLISHED
  status          ProductStatus @default(DRAFT)
  moderationNote  String?
  /// ✅ Multi-tenant scope key
  tenantKey       String        @default("DEFAULT")
  comments        Comment[]
  likes           Like[]
  orders          Order[]
  vendor          User          @relation("VendorProducts", fields: [vendorId], references: [id])
  vendorProfile   VendorProfile @relation("VendorProfileProducts", fields: [vendorProfileId], references: [id])
  views           ProductView[]
  reviews         Review[]

  @@index([tenantKey])
  @@index([tenantKey, vendorId])
  @@index([tenantKey, status])
  @@index([tenantKey, vendorProfileId])
}

model ProductView {
  id        String   @id @default(cuid())
  productId String
  viewerId  String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  viewer    User?    @relation(fields: [viewerId], references: [id])

  @@index([productId])
  @@index([viewerId])
  @@index([createdAt])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  productId String
  content   String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  productId String
  rating    Int
  content   String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
}

model Order {
  id                    String        @id @default(cuid())
  buyerId               String
  productId             String
  stripeSessionId       String        @unique
  amountCents           Int
  status                String
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  platformEarningsCents Int           @default(0)
  vendorEarningsCents   Int           @default(0)
  /// ✅ Multi-tenant scope key
  tenantKey             String        @default("DEFAULT")
  downloadLink          DownloadLink?
  buyer                 User          @relation(fields: [buyerId], references: [id])
  product               Product       @relation(fields: [productId], references: [id])

  @@index([tenantKey])
  @@index([tenantKey, buyerId])
}

model DownloadLink {
  id            String   @id @default(cuid())
  orderId       String   @unique
  fileUrl       String
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  downloadCount Int      @default(0)
  isActive      Boolean  @default(true)
  maxDownloads  Int      @default(3)
  /// ✅ Multi-tenant scope key
  tenantKey     String   @default("DEFAULT")
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([tenantKey])
  @@index([orderId])
  @@index([expiresAt])
}

model Payout {
  id          String    @id @default(cuid())
  vendorId    String
  amountCents Int
  status      String    @default("PENDING")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  paidAt      DateTime?
  /// ✅ Multi-tenant scope key
  tenantKey   String    @default("DEFAULT")
  vendor      User      @relation(fields: [vendorId], references: [id])

  @@index([tenantKey])
  @@index([tenantKey, vendorId])
}

model PasswordReset {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum TenantStatus {
  ACTIVE
  BLOCKED
}

enum TenantPlan {
  FREE
  PRO
  ENTERPRISE
}

enum TenantMode {
  WHITE_LABEL
  MARKETPLACE
}

enum Role {
  BUYER
  VENDOR
  ADMIN
}

enum VendorStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}
