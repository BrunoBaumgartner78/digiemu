rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isImage() {
      return request.resource != null
        && request.resource.contentType.matches('image/.*');
    }

    // Avatars: /avatars/{uid}/{file}
    match /avatars/{uid}/{fileName} {
      allow read: if true;  // public read (optional). set to isOwner(uid) if you want private.
      allow write: if isOwner(uid) && isImage() && request.resource.size < 5 * 1024 * 1024;
    }

    // Banners: /banners/{uid}/{file}
    match /banners/{uid}/{fileName} {
      allow read: if true;  // public read (optional). set to isOwner(uid) if you want private.
      allow write: if isOwner(uid) && isImage() && request.resource.size < 8 * 1024 * 1024;
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
